model = "gpt-5.3-codex"
model_reasoning_effort = "high"
personality = "friendly"

# approval_policy = "on-request"
# sandbox_mode = "workspace-write"
trust_level = "trusted"
# web_search = "cached"

{%- if "python" in languages %}
[mcp_servers.pyright]
command = "/bin/bash"
args = ["-lc", "mcp-language-server --lsp pyright-langserver --workspace . -- --stdio 2>/dev/null"]
startup_timeout_sec = 30
tool_timeout_sec = 90
{%- endif %}

{%- if "rust" in languages %}
[mcp_servers.rust-analyzer]
command = "/bin/bash"
args = ["-lc", "mcp-language-server --lsp rust-analyzer --workspace . 2>/dev/null"]
startup_timeout_sec = 30
tool_timeout_sec = 90
{%- endif %}

[mcp_servers.context7]
command = "npx"
args = ["-y", "@upstash/context7-mcp"]

[mcp_servers.librovore]
command = "uvx"
args = ["librovore", "serve"]

[mcp_servers.nb]
command = "nb-mcp"
args = ["--notebook", "{{ project_name }}", "--no-commit-signing"]
